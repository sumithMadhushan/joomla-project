<?xml version="1.0" ?>
<extension type="plugin" group="system" method="upgrade" version="2.5">
	<name>System - kareebu Cache Improved</name>
	<author>kareebu</author>
	<creationDate>May 2012</creationDate>
	<copyright>This plugin is released under the GNU/GPL License</copyright>
	<license>GNU General Public License</license>
	<authorEmail>hello@kareebu.com</authorEmail>
	<authorUrl>www.kareebu.com</authorUrl>
	<version>1.0.2</version>
	<description>KRB_CACHE_DESC</description>
    <files>
		<filename>index.html</filename>
		<filename plugin="kcache">kcache.php</filename>
	</files>
	<languages>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_kcache.ini</language>
		<language tag="en-GB">language/en-GB/en-GB.plg_system_kcache.sys.ini</language>
	</languages>
	<config>
	<fields name="params">
		<fieldset name="basic">
			<field	name="browsercache" type="radio" class="btn-group" default="0" description="KRB_CACHE_BROWSERCACHE_DESC" label="KRB_CACHE_BROWSERCACHE">
				<option value="0">JNO</option>
				<option value="1">JYES</option>
			</field>
			<field name="exclusions" type="textarea" cols="30" rows="10" default="index.php?option=com_content" label="KRB_CACHE_EXCLUSIONS" description="KRB_CACHE_EXCLUSIONS_DESC"/>
		</fieldset>
	</fields>
	</config>
</extension>